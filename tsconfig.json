{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "esnext"
        ],
        "module": "commonjs",
        "strictNullChecks": true,
        "alwaysStrict": true,
        "exactOptionalPropertyTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "declarationMap": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true
    },
    "include": [
        "v1.ts",
        "payloads/**/*.ts",
        "rest/**/*.ts"
    ]
}
